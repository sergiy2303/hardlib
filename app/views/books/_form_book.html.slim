= simple_form_for @book, remote: true do |f|
  = f.input :title, label: 'Title'
  = f.input :attachment, input_html: { class: 'file', accept: '.pdf, .doc, .htm, .html, .docx' }
  = f.input :thumbnail, input_html: { class: 'file', accept: '.png, .jpg, .gif' }
  = f.association :categories, as: :check_boxes
  = f.input :description, label: 'Description', as: :text
  = f.input :author, label: 'Author'
  = f.input :pages, label: 'Pages'
  = f.input :year, label: 'Year'
  = f.button :submit, class: "btn btn-primary", data: { disable: true }
